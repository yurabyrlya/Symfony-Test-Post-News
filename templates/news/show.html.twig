{% extends 'base.html.twig' %}

{% block title %} news posts !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container" style="text-align: center;">
    <div class="alert alert-warning" role="alert">
      <h1> {{ title}}! </h1>
    </div>
 <div class="example-wrapper">

     <b>
         <a href="{{ path('addnews') }}" class=" btn btn-danger btn-lg"> Add new  news post  now </a>
     </b>
 </div>

    {% for new in news %}

        <div class="alert {% if  new.id % 2 == 1 %} alert-success {% else %} alert-danger {% endif %}" role="alert">
            <h3 class="alert-heading">     {{ new.title }} </h3>
            <p>  {{ new.preview }}
            <hr>
            <p class="mb-0"> <b> <a href="{{ path('showPost', {'post' : new.id }) }}"> Read more... </a></b> </p>
        </div>

    {% endfor %}
</div>

{% endblock %}
